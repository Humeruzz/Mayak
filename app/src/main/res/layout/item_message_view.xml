<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_mess_im"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_small_margin"
        android:layout_marginLeft="@dimen/text_small_margin"
        android:layout_weight="9.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_mess_name"
            style="@style/TextView.Primary"
            android:text="User Name" />

        <TextView
            android:id="@+id/user_mess_text"
            style="@style/MessageView.Message"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="User massage" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_mess_time"
        style="@style/TextView.Time"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/text_small_margin"
        android:text="15:10" />
</LinearLayout>